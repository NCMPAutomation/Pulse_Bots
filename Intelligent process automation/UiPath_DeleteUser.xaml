<Sequence DisplayName="Delete User Workflow">
  <Variables>
    <Variable Name="username" Type="String" />
    <Variable Name="connectionString" Type="String" DefaultValue="your_connection_string_here" />
  </Variables>
  <Activities>
    <InputDialog Title="Enter Username" Label="Please enter the username to delete:" Result="username" />
    <Connect ConnectionString="{connectionString}" ProviderName="System.Data.SqlClient" />
    <ExecuteNonQuery Connection="{connection}" CommandText="DELETE FROM Users WHERE Username = @username">
      <Parameters>
        <Parameter Name="@username" Value="{username}" />
      </Parameters>
    </ExecuteNonQuery>
  </Activities>
</Sequence>