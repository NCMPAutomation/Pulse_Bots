<Sequence DisplayName="Read PDF Invoice and Export to Database">
  <Variables>
    <Variable Name="pdfText" Type="String" />
    <Variable Name="invoiceNumber" Type="String" />
    <Variable Name="invoiceDate" Type="String" />
    <Variable Name="totalAmount" Type="String" />
    <Variable Name="supplierName" Type="String" />
    <Variable Name="connectionString" Type="String" DefaultValue="your_connection_string_here" />
  </Variables>
  <Activities>
    <ReadPDFText FileName="path_to_your_invoice.pdf" Output="pdfText" />
    <Matches Input="pdfText" Pattern="Invoice Number:\s*(\w+)" Result="invoiceNumber" />
    <Matches Input="pdfText" Pattern="Invoice Date:\s*(\d{2}/\d{2}/\d{4})" Result="invoiceDate" />
    <Matches Input="pdfText" Pattern="Total Amount:\s*\$?(\d+\.\d{2})" Result="totalAmount" />
    <Matches Input="pdfText" Pattern="Supplier Name:\s*(.+)" Result="supplierName" />
    <Connect ConnectionString="{connectionString}" ProviderName="System.Data.SqlClient" />
    <Insert Connection="{connection}" TableName="Invoices">
      <Columns>
        <Column Name="InvoiceNumber" Value="{invoiceNumber}" />
        <Column Name="InvoiceDate" Value="{invoiceDate}" />
        <Column Name="TotalAmount" Value="{totalAmount}" />
        <Column Name="SupplierName" Value="{supplierName}" />
      </Columns>
    </Insert>
  </Activities>
</Sequence>